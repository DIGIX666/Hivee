# Server Configuration
NODE_ENV=development
PORT=3001
API_URL=http://localhost:3001

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/hivee

# Redis (for production queue)
REDIS_URL=redis://localhost:6379

# CapX Blockchain Configuration (Testnet)
# Chain ID: 756
# Native Token: CAPX
# Settlement Layer: Sepolia (11155111)
# Rollup Stack: Arbitrum Nitro
# Data Availability: Arbitrum AnyTrust
CAPX_RPC_URL=https://capx-testnet-c1.rpc.caldera.xyz/http
CAPX_WS_URL=wss://capx-testnet-c1.rpc.caldera.xyz/ws
CAPX_CHAIN_ID=756
PRIVATE_KEY=your_private_key_here
AGENT_IDENTITY_ADDRESS=0x...
BROKER_AGENT_ADDRESS=0x...
X402_PROTOCOL_ADDRESS=0x...
TOKEN_REGISTRY_ADDRESS=0x...
MOCK_USDC_ADDRESS=0x...

# Broker AI Service
BROKER_AI_URL=http://localhost:8001

# Storage Paths
UPLOAD_DIR=./uploads
AGENT_CODE_DIR=./agent_code

# Hivee SDK Path (optional, defaults to ../sdk)
# HIVEE_SDK_PATH=/path/to/agents/shared

# Security
JWT_SECRET=your_jwt_secret_here_min_32_chars
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Platform Configuration
PLATFORM_ADDRESS=0x...
PLATFORM_FEE_RATE=50

# Security Scanner Paths
BANDIT_PATH=bandit
ESLINT_PATH=eslint
SEMGREP_PATH=semgrep
TRIVY_PATH=trivy
